---
import Card from '@/components/Card.astro';
import { getCollection } from 'astro:content';
const casinos = await getCollection('casinos');
---

<div class="container mb-10 md:mb-20">
  <div class="flex justify-between items-center gap-2 mb-8">
    <h2 class="text-2xl md:text-3xl font-bold text-white">Latest Casino Reviews</h2>
    <a href="/casino" class="text-blue-500 font-medium hover:underline underline-offset-3">View all</a>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
    <Card
      image={casinos[0].data.basic.cover}
      name={casinos[0].data.basic.name}
      description={casinos[0].data.basic.description}
      minDeposit={casinos[0].data.financialInfo.minimumDeposit}
      games={casinos[0].data.financialInfo.gameCount}
      rating={casinos[0].data.basic.rating}
      bonus={casinos[0].data.basic.bonus}
      reviewUrl={`/casinos[0]/${casinos[0].id}`}
    />
  </div>
</div>
