---
import { Image } from 'astro:assets';
const { image, name, description, minDeposit, games, rating, bonus, reviewUrl } = Astro.props;
---

<a href={reviewUrl} class="bg-placeholder rounded-lg shadow overflow-hidden hover:scale-102 transition-transform">
  <Image src={image} alt={name} class="w-full h-48 object-cover object-center" />
  <div class="p-5 flex flex-col flex-1">
    <h2 class="text-white text-2xl font-bold mb-2">{name}</h2>
    <p class="text-white/80 text-base mb-4 line-clamp-2">{description}</p>
    <div class="flex gap-6 mb-4">
      <div>
        <div class="text-white/60 text-xs">Min Deposit</div>
        <div class="text-white text-lg font-semibold">{minDeposit}</div>
      </div>
      <div>
        <div class="text-white/60 text-xs">Games</div>
        <div class="text-white text-lg font-semibold">{games}</div>
      </div>
      <div>
        <div class="text-white/60 text-xs">Rating</div>
        <div class="text-yellow-400 text-lg font-semibold">
          {Array.from({ length: 5 }).map((_, i) => <span>{i < rating ? '★' : '☆'}</span>)}
        </div>
      </div>
    </div>
    <div class="flex flex-col gap-1 mb-5">
      <span class="text-white/60 text-xs">Welcome Bonus</span>
      <p class="text-accent font-semibold text-sm">{bonus}</p>
    </div>
    <span class="text-blue-400 hover:underline flex items-center gap-1 mt-auto">View Review <span>→</span></span>
  </div>
</a>
