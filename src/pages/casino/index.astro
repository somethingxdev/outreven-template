---
import Card from '@/components/Card.astro';
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';
const casinos = await getCollection('casinos');
---

<Layout>
  <div class="container">
    <h1 class="text-2xl md:text-3xl lg:text-5xl text-center font-bold mb-20 text-white">Casino Reviews</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
      {
        casinos.map((casino) => (
          <Card
            image={casino.data.basic.cover}
            name={casino.data.basic.name}
            description={casino.data.basic.description}
            minDeposit={casino.data.financialInfo.minimumDeposit}
            games={casino.data.financialInfo.gameCount}
            rating={casino.data.basic.rating}
            bonus={casino.data.basic.bonus}
            reviewUrl={`/casino/${casino.id}`}
          />
        ))
      }
    </div>
  </div>
</Layout>
